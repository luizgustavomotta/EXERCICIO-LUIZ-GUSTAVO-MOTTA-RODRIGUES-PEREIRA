<body>

  <div class="container">
    <h1>Gerar Lista 
    <p>Digite um número:</p>
    <input type="number" id="numero" placeholder="Ex: 5">
    <br>
    <button onclick="gerarLista()">Gerar</button>

    <div id="mensagem"></div>
    <div id="lista"></div>
  </div>

  <script>
    function gerarLista() {
      const input = document.getElementById('numero');
      const valor = input.value.trim();
      const mensagem = document.getElementById('mensagem');
      const listaDiv = document.getElementById('lista');

      // Limpar mensagens e listas anteriores
      mensagem.textContent = "";
      listaDiv.innerHTML = "";

      // Verifica se foi digitado um número válido
      if (valor === "" || isNaN(valor) || Number(valor) <= 0) {
        mensagem.textContent = "Por favor, insira um número válido";
        return;
      }

      const numero = Number(valor);

      if (numero === 5) {
        const ol = document.createElement('ol');
        for (let i = 1; i <= 5; i++) {
          const li = document.createElement('li');
          li.textContent = `Item ${i}: Luiz Gustavo`; // Aqui está seu nome
          ol.appendChild(li);
        }
        listaDiv.appendChild(ol);
      } else {
        mensagem.textContent = `Você digitou: ${numero}. Tente digitar o número 5 para ver a lista.`;
      }
    }
  </script>

</body>
