<body>

  <div class="container">
    <h1>Bem-vindo!</h1>
    <p>Digite seu nome abaixo:</p>
    <input type="text" id="nome" placeholder="Seu nome aqui">
    <br>
    <button onclick="mostrarMensagem()">Enviar</button>
    <p id="mensagem"></p>
  </div>

  <script>
    function mostrarMensagem() {
      const nome = document.getElementById('nome').value.trim();
      const mensagem = document.getElementById('mensagem');

      if (nome === "") {
        mensagem.textContent = "Por favor, insira seu nome.";
        mensagem.style.color = "red";
      } else {
        mensagem.textContent = `Olá, ${nome}! Seja bem-vindo(a)!`;
        mensagem.style.color = "green";
      }
    }
  </script>

</body>
