  <script>
    const botao = document.getElementById("btnSaudar");
    const campoNome = document.getElementById("nomeInput");
    const saida = document.getElementById("resultado");

    botao.addEventListener("click", function() {
      const nome = campoNome.value.trim();

      if (!nome) {
        saida.textContent = "‚ö†Ô∏è Voc√™ precisa digitar um nome.";
        saida.style.color = "red";
      } else {
        saida.textContent = `üëã Seja bem-vindo(a), ${nome}!`;
        saida.style.color = "#00796b";
      }
    });

    // Permite enviar com Enter
    campoNome.addEventListener("keypress", function(e) {
      if (e.key === "Enter") botao.click();
    });
